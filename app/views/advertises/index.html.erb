
<body>

<%= @advertises.each do |advertise| %>
<% if @user.role == 'advertiser' %>
<div class="row">
  <div class="col s12 m4">
    <div class="card">
      <div class="card-image">
        <img src="images/sample-1.jpg">
        <span class="card-title"><p><%= advertise.title %></p></span>
      </div>
      <div class="card-content">
        <p><%= advertise.description %></p>
      </div>
      <div class="card-action"><%= link_to 'Show', user_advertise_path(@user, advertise)%>
      </div>
    </div>
  </div>
</div>
<% end %>
<% end %>
<% if @user.role == 'viewer' %>
<%= link_to 'Search Hotel', class:"btn waves-effect waves-light"%>
<%= link_to 'Search shop', class:"btn waves-effect waves-light"%>
<% end %>

</body>


