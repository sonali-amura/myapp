<%= form_for :advertise, url: user_advertises_path(current_user) do |f| %>

<div class="row">
  <div class="input-field col s4">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="input-field col s4">
    <%= f.label :description %><br>
    <%= f.text_field :description %>
  </div>
</div>


<div class="field">
    <%= f.label :category %><br>
    <%= f.text_field :category %>
  </div>
  <div class="field">
    <%= f.label :area %><br>
    <%= f.text_field :area %>
  </div>
  <div class="field">
    <%= f.label :location %><br>
    <%= f.text_field :location %>
  </div>
  
  <div class="row">
  <div class="input-field col s4">
    <%= f.label :started_at, "Start date", class:"active"  %>
    <%= f.date_field :started_at,class:"datepicker"%>
  </div>
  <div class="input-field col s4">
    <%= f.label :expiry_date, "Deadline", class:"active"  %>
    <%= f.date_field :expiry_date,class:"datepicker" %>
  </div>
</div>
  <div class="field">
      <%= f.label :image %><br>
      <%= f.file_field :image %>
   </div>
<div class="actions">
  <%= f.submit %>
</div>
<% end %>
