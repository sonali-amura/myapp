<div class="container">
<div class="padding-left150">
  <h1 class="header teal-lighten capitalize">My advertise</h1>
<div class="row">
  <div class="col s12 m6">
    <div class="card">
      <div class="card-image">
        <%= image_tag @advertise.avatar.url.to_s, :size => "100x100" %>
      </div>
      <span class="card-title" style="color:black"><p><%= @advertise.title %></p></span>
      <div class="card-content">
        <p><%= @advertise.description %></p>
      </div>
      <div class="card-action left"><%= link_to 'Edit', edit_user_advertise_path(current_user, @advertise) %>
    <%= link_to 'Back', user_path(current_user) %>
      </div>
    </div>
  </div>
</div>
</div>
</div>