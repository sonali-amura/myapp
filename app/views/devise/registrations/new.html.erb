<div class="container">
    <h1 class="header">Sign up</h1>
<div class="row ">

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <p>
      <input id="role_advertiser" name="role" type="radio" value="advertiser" />
    <label for="role_advertiser">Create Add</label>
     </p>
      <p>
    <input id="role_viewer" name="role" type="radio" value="viewer" />
    <label for="role_viewer">View Add</label>

    </p>
  <div class="row ">
    <div class="input-field col s6">
    <i class="material-icons prefix">account_circle</i>
      <%= f.label :name %><br />
      <%= f.text_field :name, autofocus: true %>
    </div>
    <div class="input-field col s6">
      <i class="material-icons prefix">mode_edit</i>
      <%= f.label :address %><br />
      <%= f.text_field :address %>
    </div>
  </div>
  <div class="row ">
    <div class="input-field col s6">
    <i class="material-icons prefix">email</i>
      <%= f.label :email %><br />
      <%= f.email_field :email%>
    </div>
    <div class="input-field col s6">
      <i class="material-icons prefix">phone</i>
      <%= f.label :phone %><br />
      <%= f.text_field :phone %>
    </div>
  </div>
  <div class="row">
    <div class="input-field col s6">
      <i class="material-icons prefix">visibility</i>
      <%= f.label :password %>
      <%= f.password_field :password, autocomplete: "off" %>
    </div>
    <div class="input-field col s6">
      <i class="material-icons prefix">email</i>
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off" %>
    </div>
  </div>
  
  <div class="actions">
    <%= f.submit "Sign up" ,class:"btn waves-effect waves-light"%>
  </div>
<% end %>
<%= render "devise/shared/links" %>
</div>
</div>
<%= javascript_tag do %>
debugger
  if($('#create_add').is(':checked')){  
   <% resource[:role] = 'advertiser' %>
  }else{
    <% resource[:role] = 'viewer' %>
  }
 
<% end %>

